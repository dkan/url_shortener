<h1>Shorten It!</h1>
<p><%= flash[:success]%></p>
<p><%= flash[:message]%></p>
<p><%= flash[:error]%></p>

<div>
    <%= form_for(@url) do |f| %>
        
        <p>
            <label>Long URL</label><br>
            <%= f.text_field(:long_url) %>
        </p>
        <p>
            <label>Vanity URL</label><br>
            <%= f.text_field(:short_url) %>
        </p>
            
        <p><%= f.submit "Do it!"%></p>
    
    <% end %>
</div>
<%= link_to 'all links', '/all' %>